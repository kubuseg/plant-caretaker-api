{
  "bindings": [
    {
      "name": "req",
      "route": "user",
      "authLevel": "function",
      "methods": [
        "get"
      ],
      "direction": "in",
      "type": "httpTrigger"
    },
    {
      "type": "http",
      "direction": "out",
