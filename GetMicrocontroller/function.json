{
  "bindings": [
    {
      "name": "req",
      "route": "mc/{mcId}",
      "authLevel": "function",
      "methods": ["get"],
      "direction": "in",
      "type": "httpTrigger"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "connectionStringSetting": "ItemsTrigger_ConnectionString",
      "name": "mc",
      "databaseName": "plantsDB",
      "collectionName": "Microcontrollers",
      "sqlQuery": "Select * from c where c.id = {mcId}",
      "direction": "in",
      "type": "cosmosDB"
    }
  ]
}
